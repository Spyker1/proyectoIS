<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anuncios</title>
    <link rel="stylesheet" href="../css/styles.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
  <div class="contenedor">
        <div class="barras">{{>header}}</div>
        <div class="Fondo">
          <div class="logos">                
            <img src="/sitio/assets/img/Tamaulipas.png" alt="Imagen 2"class="tamlogo">
            <img src="/sitio/assets/img/Escudo.png" alt="Imagen 1" class="escudologo">
          </div>


	

  <div class="main-container">
    <div class="sidebar">
    {{!-- {{>botones_admin}} --}}
     </div>
<div class="content">


    <div id="section2">

    
    <div class="btnDerecha">
            {{!-- <button class="btnCMS" id="descargarBtn">Reporte productos</button> --}}
            <a href="/agregar-productos"><button class="btnCMS">Agregar nuevo
                </button></a>
    </div>
    <table id="miTabla" class="tablasCMS">
            <thead>
              <tr>
                <th class="heading">&nbsp;</th>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                {{#if (controlVista puesto)}}
                <td></td>
                <th>Eliminar</th>
                {{/if}}
              </tr>
            </thead>
            <tbody>
              {{#each productos}}
              <tr class="heading" id="blanco">
                <td>{{ID_PRO}}</td>
                <td valign="bottom">
                  <img
                    src="http://localhost:3000/producto/{{ID_PRO}}/{{PT_IMG}}" alt="producto en venta"
                    >
                </td>
                <td>{{NOM_PRO}}</td>
                <td>{{DESC_PRO}}</td>
                <td><button class="btnEle" id="eliminar-pro" data-id-pro={{ID_PRO}}>Eliminar</button></td>
              </tr>
             
              {{/each}}
            </tbody>
          </table>
        </div>
        </div>
</div>
        <section class="paginacion">
			<ul>
                {{#each pag_pro}}
				<li><a href="/Productos?pagina={{this}}" class="active">{{this}}</a></li>
                {{/each}}
			</ul>
		</section>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="../js/script.js"></script>
        <script src="../js/restricciones.js"></script>
        <script src="../js/btnMn.js"></script>
         <script src="../js/btn_abc_pro.js"></script>
         <script src="../js/btn_miCuenta.js"></script>
         <script src="../js/tabla_productos.js"></script>
         <script src="../js/botones_cms.js"></script>
         <script src="/js/sweetalert2.all.min.js"></script>
        <script src="/js/sweetalert2.min.js"></script>

    </div>
    </div>    
    <div class="barras"></div>
</body>
</html>