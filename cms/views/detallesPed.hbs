<!DOCTYPE html>
<html>
<head>
    <title>Detalles del Pedido</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="../css/styles.css" />
</head>
<body class="se">

     <header>
         <button class="btnCasa"><i class="fa fa-home"></i></button>
        
    </header>   

    <section id="informacion-usuario" class="sec">
        <h2 class="h">Información del Usuario</h2>
        <table class="table-info">
            <tr>
                <th class="label-info">Dirección</th>
                <td>{{direccion}}</td>
            </tr>
            <tr>
                <th class="label-info">Ciudad</th>
                <td>{{ciudad}}</td>
            </tr>
            <tr>
                <th class="label-info">Estado</th>
                <td>{{estado}}</td>
            </tr>
            <tr>
                <th class="label-info">Código Postal</th>
                <td>{{cod_postal}}</td>
            </tr>
        </table>
    </section>

    <section id="productos-pedidos" class="sec">
        <h2 class="h">Productos Pedidos</h2>
        <ul class="product-list">
             {{#each detalles_pedido}}           
            <li class="product-item">
                <img src="http://localhost:3000/producto/{{ID_PRO}}/{{PT_IMG}}" alt="Producto 1">
                <p class="product-name">Nombre del Producto: {{NOM_PRO}}</p>
                <p class="product-quantity">Cantidad: {{CANTIDAD_PRO}}</p>
                <p class="product-price">Precio Unitario: {{formatoNumero PRECIO_UNITARIO}}</p>
            </li>
              {{/each}}
        </ul>
    </section>

    <section id="resumen-pedido" class="sec">
        <h2 class="h">Resumen del Pedido</h2>
        <table class="table-summary">
            <tr>
                <th class="label-summary">Subtotal</th>
                <td class="value-summary">{{formatoNumero pago_tot}}</td>
            </tr>
            <tr>
                <th class="label-summary">IVA (16%)</th>
                <td class="value-summary">$0.00</td>
            </tr>
            <tr>
                <th class="label-summary">Cargo de Envío</th>
                <td class="value-summary">$0.00</td>
            </tr>
            <tr>
                <th class="label-summary">Total a Pagar</th>
                <td class="value-summary">{{formatoNumero pago_tot}}</td>
            </tr>
        </table>
    </section>
</body>
<script src="../js/btn_casa.js"></script>
<script src="/js/sweetalert2.all.min.js"></script>
    <script src="/js/sweetalert2.min.js"></script>
</html>