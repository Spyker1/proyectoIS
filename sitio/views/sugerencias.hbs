<!DOCTYPE html>
<html>
<head>
    <title>Sugerencias</title>
     <link rel="stylesheet" href="/css/styles.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    {{>header}}
    <section class="product-list">
      {{#each sugerencias}}
        <article class="product">
          
                <a href="/producto/{{NOM_PRO}}"><div class="product-img">
                <img class="img-p" src='../{{PT_IMG}}' alt="Xbox en venta">
                </div>
                </a>
            <div class="product-details">
                <h2>{{NOM_PRO}}</h2>
                <p>{{DESC_PRO}}</p>
                <span class="price" >{{formatoNumero PRECIO_PRO}}
                    <br>
                <span class="cantidad">Cantidad disponible:{{CANT_PRO}}</span>
                </span>
             <button id="agregar_carrito"  data-product-id={{ID_PRO}} class="button-85">Agregar al Carrito</button>
            </div>
        </article>
        {{/each}}
         
    </section>
     <section class="paginacion">
			<ul>
                {{#each pag_pro}}
				<li><a href="/catalogo-productos?pagina={{this}}" class="pagina">{{this}}</a></li>
                {{/each}}
			</ul>
		</section>
    {{>footer}}
</body>
<script src="/js/barraBusqueda.js"></script>
<script src="/js/filtros.js"></script>
<script src="/js/productos.js"></script>
<script src="/js/carrito.js"></script>  
<script src="/js/sweetalert2.all.min.js"></script>
    <script src="/js/sweetalert2.min.js"></script>
</html>