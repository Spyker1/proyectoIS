<!DOCTYPE html>
<html>
<head>
    <title>Busqueda por filtros</title>
     <link rel="stylesheet" href="/css/styles.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    {{>header}}

{{#if filtro}}
 <section class="product-list">
      {{#each filtro}}

         <article class="product">
            <a href="/producto/{{NOM_PRO}}"><div class="product-img">
                {{!-- {{#if PT_IMG}} --}}
                <img class="img-p" src="/producto/{{ID_PRO}}/{{PT_IMG}}" alt="producto en venta">
                {{!-- {{else}} --}}
                    {{!-- <img class="img-p" src='../assets/imgs/gamecave.png' alt="producto en venta"> --}}
                {{!-- {{/if}} --}}

            </div>
            </a>
            <div class="product-details">
                <h2>{{NOM_PRO}}</h2>
                <p>{{DESC_PRO}}</p>
                <span class="price">{{formatoNumero PRECIO_PRO}}</span>
                <br>
                <span class="cantidad">Cantidad disponible:{{CANT_PRO}}</span>
                <button id="agregar_carrito" data-product-id={{ID_PRO}} class="button-85">Agregar al carrito</button>
            </div>
        </article>
        {{/each}}
        </article>
         {{else}}
    <h1>NO HAY PRODUCTOS EN NUESTRO INVENTARIO</h1>
    {{/if}}
    </section>
        
        <section class="paginacion">
			<ul>
                {{#each prueba}}
				<li><a href="/filtro/{{filtro_p}}/{{filtro_f}}?pagina={{id}}" class="active">{{id}}</a></li>
            {{/each}}
			</ul>
		</section>

    {{> footer}}

</body>
<script src="/js/barraBusqueda.js"></script>
 <script src="/js/filtros.js"></script>
 <script src="/js/carrito.js"></script>
 <script src="/js/sweetalert2.all.min.js"></script>
    <script src="/js/sweetalert2.min.js"></script>
</html>