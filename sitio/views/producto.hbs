<!DOCTYPE html>
<html lang="en">

<head>

  <title>Producto</title>
  <link rel="stylesheet" href="/css/styles.css">
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>
     {{>header}}
  <div class="tacha">
    <span class="tacha-x"></span>
  </div>

    <div class="mainWrapper">
      <div class="mainBackground clearfix">
        <div class="row">
          <div class="column small-centered">
            <div class="productCard_block">
              <div class="row">
                <div class="small-12 large-6 columns">
                  <div class="productCard_leftSide clearfix">
                    <div class="sliderBlock">
                      {{#each producto}}
                      <ul class="sliderBlock_items">
                        <div class="cenrtro">
                        <img class="img-s" src="/producto/{{ID_PRO}}/{{PT_IMG}}" alt="producto en venta">
                        </div>
                      </ul>

                      <div class="sliderBlock_controls">
                        <div class="sliderBlock_controls__navigatin">
                          <div class="sliderBlock_controls__wrapper">
                            <div class="sliderBlock_controls__arrow sliderBlock_controls__arrowBackward">
                              <i class="fas fa-arrow-alt-circle-right"></i>
                            </div>
                            <div class="sliderBlock_controls__arrow sliderBlock_controls__arrowForward">
                            <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
                            </div>
                          </div>
                        </div>

                        <ul class="sliderBlock_positionControls">
                          <li class="sliderBlock_positionControls__paginatorItem sliderBlock_positionControls__active">
                          </li>
                          <li class="sliderBlock_positionControls__paginatorItem"></li>
                        </ul>
                      </div>
                    </div>
                    
                  </div>
                </div>
                <div class="small-12 large-6 columns">
                  <div class="productCard_rightSide">
                    <div class="block_specification">
                      <div class="block_specification__specificationShow">
                      </div>
                    </div>
                    
                    <p class="block_model">
                      <span class="block_model__text">id producto: </span>
                      <span class="block_model__number">{{ID_PRO}}</span>
                    </p>

                    <div class="block_product">
                      <h2 class="block_name block_name__mainName">{{NOM_PRO}}</h2>

                      <div class="block_quantity clearfix">
                        <span class="text_specification">Cantidad:</span>
                        <button class=" menos"><span class="front">
                          -
                        </span></button>
                        <div class="block_quantity__chooseBlock">
                          <input class="block_quantity__number" name="quantityNumber" type="text" min="1" tabindex="-1"  oninput="validarNum(this)"
                          value="1">
                          <button class=" mas "><span class="front">
                            +
                          </span></button> 
                        </div>
                      </div>
{{!-- 
                      <div class="block_goodColor">
                        <span class="text_specification">Color:</span>
                        <div class="block_goodColor__allColors">
                          <input type="radio" name="colorOfItem" class="radio_button" id="radioColor" checked />
                          <label for="radioColor" class="block_goodColor__radio block_goodColor__black"></label>
                          <input type="radio" name="colorOfItem" class="radio_button" id="radioColor2" />
                          <label for="radioColor2" class="block_goodColor__radio block_goodColor__silver"></label>
                        </div>
                      </div> --}}
                        <div class="row ">
                          <div class="large-6 small-12 column left-align">
                            <div class="block_price">
                              <p class="block_price__currency">{{formatoNumero PRECIO_PRO}}</p>
                            </div>
                            
                          </div>
                          <div class="large-6 small-12 column end">
                            <p class="block_product__advantagesProduct">
                              {{DESC_PRO}}
                              
                            </p>
                            <div class="block_descriptionInformation">
                              <span>
                              </span>Cantidad de productos disponible: {{CANT_PRO}}
                            </div>
                            <button class="boton-F" data-plantilla-precio={{PRECIO_PRO}}  data-product-plantilla-id={{ID_PRO}}>Agregar al carrito</button>
                          </div>
                          {{/each}}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

</body>
<script src="/js/productos.js"></script>
<script src="/js/filtros.js"></script>
<script src="/js/btn_regresar.js"></script>
<script src="/js/carrito.js"></script>
<script src="/js/carrito_plantilla.js"></script>
<script src="/js/filtros.js"></script>
<script src="/js/barraBusqueda.js"></script>
<script src="/js/restricciones.js"></script>
 <script src="/js/sweetalert2.all.min.js"></script>
    <script src="/js/sweetalert2.min.js"></script>
</html>
